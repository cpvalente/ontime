{
  "$schema": "./node_modules/oxfmt/configuration_schema.json",
  "endOfLine": "lf",
  "trailingComma": "all",
  "tabWidth": 2,
  "semi": true,
  "singleQuote": true,
  "jsxSingleQuote": true,
  "printWidth": 120,
  "sortPackageJson": false,
  "sortImports": {},
  "ignorePatterns": [
    "build",
    "coverage",
    "dist",
    "node_modules",
    "playwright-report",
    "pnpm-lock.yaml",
    "**/*.toml",
    "**/*.json",
    "!tsconfig.common.json",
    "!turbo.json",
    "!package.json"
  ]
}

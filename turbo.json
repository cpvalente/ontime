{
  "$schema": "https://turbo.build/schema.json",
  "globalEnv": ["NODE_ENV", "IS_TEST", "GITHUB_TOKEN", "APPLEID", "APPLEIDPASS", "TEAMID", "CSC_KEY_PASSWORD", "CSC_LINK"],
  "tasks": {
    "transit-typecheck":{
      "dependsOn": ["^transit-typecheck"]
    },
    "typecheck": {
      "dependsOn": ["^transit-typecheck"]
    },
    "lint": {},
    "lint:fix": {},
    
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["build/**", "dist/**"],
      "env": ["SENTRY_AUTH_TOKEN"]
    },
    "build:docker": {
      "dependsOn": ["^build:docker"],
      "outputs": ["build/**", "dist/**"],
      "env": ["SENTRY_AUTH_TOKEN"]
    },
    "build:electron": {
      "dependsOn": ["^build:electron"],
      "outputs": ["build/**", "dist/**"],
      "env": ["SENTRY_AUTH_TOKEN"]
    },


    "dev": {
      "cache": false,
      "passThroughEnv": ["IS_TEST", "CI"],
      "persistent": true
    },

    "test": {},
    "test:pipeline": {},
    "e2e": {
      "dependsOn": ["ontime-ui#build"],
      "passThroughEnv": ["PLAYWRIGHT_*"]
    },

    "e2e:ui": {
      "dependsOn": ["ontime-ui#build"],
      "passThroughEnv": ["PLAYWRIGHT_*"],
      "persistent": true
    },

    "dev:inspect": {
      "cache": false,
      "persistent": true
    },
    "dev:test": {
      "cache": false
    },


    "dist-win": {
      "dependsOn": ["build:electron"],
      "outputs": ["build/**"]
    },
    "dist-mac": {
      "dependsOn": ["build:electron"],
      "outputs": ["build/**"]
    },
    "dist-mac:local": {
      "dependsOn": ["build:electron"],
      "outputs": ["build/**"]
    },
    "dist-linux": {
      "dependsOn": ["build:electron"],
      "outputs": ["build/**"]
    }
  }
}

{
  "name": "ontime",
  "version": "4.0.0-alpha.6",
  "description": "Time keeping for live events",
  "keywords": [
    "ontime",
    "timer",
    "rundown"
  ],
  "author": "Carlos Valente",
  "homepage": "https://www.getontime.no/",
  "repository": "https://github.com/cpvalente/ontime",
  "bugs": {
    "url": "https://github.com/cpvalente/ontime/issues",
    "email": "mail@getontime.no"
  },
  "license": "AGPL-3.0-only",
  "engines": {
    "node": "~22",
    "pnpm": "~10"
  },
  "type": "module",
  "scripts": {
    "typecheck": "turbo run typecheck",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix",
    "build": "turbo run build",
    "build:docker": "turbo run build",
    "build:electron": "turbo run build:electron",
    "dev": "cross-env NODE_ENV=development turbo run dev",
    "dev:ui": "cross-env NODE_ENV=development turbo run ontime-ui#dev",
    "dev:server": "cross-env NODE_ENV=development turbo run ontime-server#dev",
    "dev:electron": "cross-env NODE_ENV=development turbo run ontime-electron#dev",
    "dist-win": "turbo run dist-win",
    "dist-mac": "turbo run dist-mac",
    "dist-linux": "turbo run dist-linux",
    "test": "turbo run test",
    "test:pipeline": "turbo run test:pipeline",
    "e2e": "turbo run e2e",
    "e2e:ui": "turbo run e2e:ui",
    "e2e:i": "npx playwright codegen",
    "cleanup": "rm -rf node_modules && rm -rf **/node_modules && rm -rf **/**/node_modules",
    "clear-temp": "rm -rf e2e/tests/fixtures/tmp"
  },
  "devDependencies": {
    "@types/node": "catalog:",
    "@typescript-eslint/eslint-plugin": "catalog:",
    "@typescript-eslint/parser": "catalog:",
    "cross-env": "catalog:",
    "eslint": "catalog:",
    "eslint-config-prettier": "catalog:",
    "prettier": "catalog:",
    "turbo": "^2.3.3",
    "typescript": "catalog:"
  },
  "packageManager": "pnpm@10.15.1+sha512.34e538c329b5553014ca8e8f4535997f96180a1d0f614339357449935350d924e22f8614682191264ec33d1462ac21561aff97f6bb18065351c162c7e8f6de67"

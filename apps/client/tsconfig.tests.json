{
  "extends": "../../tsconfig.tests.json",
  "compilerOptions": {
    "target": "esnext",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "types": [
      "vite/client",
      "vite-plugin-svgr/client",
      "vitest/globals"
    ],
    "module": "esnext",
    "moduleResolution": "bundler",
    "allowUnusedLabels": false,
    "removeComments": true,
    "preserveConstEnums": true,
    "allowJs": true,
    "jsx": "react-jsx",
    "outDir": "build"
  },
  "include": [
    "src/**/*.test.ts",
    "src/**/*.test.tsx",
    "src/**/*.spec.ts",
    "src/**/*.spec.tsx",
  ],
  "typeRoots": [
    "./src/declarations/**"
  ]
}

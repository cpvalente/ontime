{
  "extends": "../../tsconfig.common.json",
  "compilerOptions": {
    "target": "ESNext",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "types": [
      "vite/client",
      "vite-plugin-svgr/client",
      "vitest/globals"
    ],
    "module": "esnext",
    "moduleResolution": "node",
    "allowUnusedLabels": false,
    "removeComments": true,
    "preserveConstEnums": true,
    "allowJs": true,
    "baseUrl": "src",
    "jsx": "react-jsx",
    "outDir": "build"
  },
  "include": [
    "src"
  ],
  "typeRoots": [
    "./src/declarations/**"
  ],
  "exclude": [
    "node_modules",
    "build",
  ]
}

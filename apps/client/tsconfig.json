{
  "extends": "../../tsconfig.common.json",
  "compilerOptions": {
    "target": "esnext",
    "composite": true,
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "types": [
      "vite/client",
      "vite-plugin-svgr/client"
    ],
    "module": "esnext",
    "moduleResolution": "node",
    "allowUnusedLabels": false,
    "removeComments": true,
    "preserveConstEnums": true,
    "allowJs": true,
    "baseUrl": "src",
    "jsx": "react-jsx",
    "outDir": "build"
  },
  "include": [
    "src"
  ],
  "typeRoots": [
    "./src/declarations/**"
  ],
  "exclude": [
    "node_modules",
    "build",
    "src/**/*.test.ts",
    "src/**/*.test.tsx",
    "src/**/*.spec.ts",
    "src/**/*.spec.tsx",
  ],
  "references": [
    {
      "path": "./tsconfig.tests.json"
    }
  ]
}

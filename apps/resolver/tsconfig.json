{
  "extends": "../../tsconfig.common.json",
  "compilerOptions": {
    "target": "esnext",
    "module": "preserve",
    "moduleResolution": "bundler",
    "allowUnusedLabels": false,
    "removeComments": true,
    "preserveConstEnums": true,
    "allowJs": true,
    "declaration": true,
    "outDir": "dist",
    "sourceMap": true,
    "ignoreDeprecations": "6.0"
  },
  "include": [
    "src",
  ],
  "exclude": [
    "node_modules",
    "src/**/*.test.ts",
    "src/**/*.spec.ts",
  ]
}

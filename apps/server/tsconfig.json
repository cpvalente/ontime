{
  "extends": "../../tsconfig.common.json",
  "compilerOptions": {
    "target": "esnext",
    "module": "node16",
    "moduleResolution": "node16",
    "noImplicitReturns": false, //TODO: fix this
    "allowJs": true,
    "esModuleInterop": true,
    "outDir": "dist",
    "experimentalDecorators": true,
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.js",
  ],
  "exclude": [
    "src/**/*.test.ts",
    "src/**/*.spec.ts",
  ]
}

{
  "compilerOptions": {
    "strict": false,
    "target": "ESNext",
    "module": "NodeNext",
    "moduleResolution": "nodenext",
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "types": ["vitest/globals"],
    "outDir": "dist",
    "experimentalDecorators": true,
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.js",
  ],
}

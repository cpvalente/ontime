    "body-parser": "^1.20.0",
    "cors": "^2.8.5",
    "dotenv": "^16.0.1",
    "express": "^4.18.1",
    "express-session": "^1.17.3",
    "express-validator": "^6.14.2",
    "lowdb": "^5.0.5",
    "multer": "^1.4.4",
    "nanoid": "^4.0.0",
    "node-osc": "^8.0.6",
    "node-xlsx": "^0.21.0",
    "ontime-utils": "workspace:*",
    "passport": "^0.6.0",
    "passport-local": "~1.0.0",
    "socket.io": "^4.5.4",
    "ts-node-dev": "^2.0.0",
    "tsup": "^6.5.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.15",
    "@types/node": "^16.11.7",
    "@typescript-eslint/eslint-plugin": "^5.48.1",
    "@typescript-eslint/parser": "^5.48.1",
    "eslint": "^8.31.0",
    "eslint-plugin-prettier": "^4.2.1",
    "nodemon": "^2.0.20",
    "prettier": "^2.8.3",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.4",
    "vitest": "^0.27.1"
  },
  "scripts": {
    "dev": "set NODE_ENV=development && nodemon --exec \"ts-node-esm\" ./src/index.ts",
    "build": "tsup --format cjs",
    "setdb": "cp ../electron/demo-db/db.json preloaded-db/db.json",
    "postinstall": "pnpm setdb",
    "lint": "eslint .",
    "test": "vitest",
    "test:pipeline": "vitest run",
    "typecheck": "tsc --noEmit",
    "cleanup": "rm -rf .turbo && rm -rf node_modules && rm -rf dist"
  },
  "tsup": {
    "entry": [
      "src/index.ts"
    ],
    "sourcemap": true,
    "clean": true,
    "shims": true,
    "minify": true
  }
}

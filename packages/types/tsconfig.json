{
  "extends": "../../tsconfig.common.json",
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "bundler",
    "allowUnusedLabels": false,
    "removeComments": true,
    "preserveConstEnums": true,
    "allowJs": true,
    "declaration": true,
    "rootDir": "src",
    "outDir": "dist",
  },
  "include": [
    "src/index.ts",
  ],
  "exclude": [
    "node_modules", "dist"
  ]
}

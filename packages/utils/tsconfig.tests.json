{
  "extends": "../../tsconfig.tests.json",
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "allowUnusedLabels": false,
    "removeComments": true,
    "preserveConstEnums": true,
    "allowJs": true,
    "baseUrl": "src",
    "types": ["vitest/globals"],
    "composite": true
  },
  "include": [
    "src/**/*.test.ts",
    "src/**/*.spec.ts",
    "src/**/*.mock.ts",
  ]
}
